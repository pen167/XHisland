.portrait {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.portrait .pic {
  height: 130rpx;
  width: 130rpx;
  margin-bottom: 15rpx;
}

.portrait .pic .img {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.portrait .name {
  font-weight: bold;
  font-size: 30rpx;
}

.birthday {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin-left: 60rpx;
  margin-right: 70rpx;
}

.birthday .picker {
  width: 100px;
  height: 40px;
  line-height: 40px;
  text-align: right;
}

.input_box {
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-left: 60rpx;
  margin-right: 70rpx;
}

.input_box .text {
  display: flex;
  height: 100rpx;
  align-items: center;
}

.input_box .input {
  background-color: var(--whiteColor);
  margin-bottom: 10rpx;
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

page {
  background-color: var(--bgColor);
}

.separator {
  height: 0.4px;
  width: 310px;
  background-color: var(--dashColor);
  margin-left: 60rpx;
  margin-right: 70rpx;
}

.footer {
  padding: 50rpx;
  text-align: center;
  height: 150rpx;
  color: var(--vipColor);
}
