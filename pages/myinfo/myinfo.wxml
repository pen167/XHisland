<!-- 个人信息 会员信息 -->
<view class="header_box">
  <island_header></island_header>
  <vipcard></vipcard>
</view>

<!-- 剩余次数 -->
<view class="box">
  <view class="inner">
    <text class="text" >剩余次数</text>
    <image class="img" src="/static/images/icons/info_blue.png" mode="widthFix"/>
  </view>

  <text>$ 200</text>
</view>

<!-- 四个小图标 -->
<view class="order_box">
  <view class="icon_box">
    <!-- <image class="img" src="/static/images/icons/order1.png" mode="widthFix"/> -->
    <van-icon name="smile-comment-o" size="65rpx" color="var(--text_dblue)"/>
    <text class="text">想认识我</text>
  </view>

  <view class="icon_box">
    <!-- <image class="img" src="/static/images/icons/order1.png" mode="widthFix"/> -->
    <van-icon name="like-o" size="65rpx" color="var(--text_dblue)"/>
    <text class="text">收藏我的</text>
  </view>
  
  <view class="icon_box">
    <!-- <image class="img" src="/static/images/icons/order1.png" mode="widthFix"/> -->
    <van-icon name="fire-o" size="65rpx" color="var(--text_dblue)"/>
    <text class="text">匹配状态</text>
  </view>
  
  <view class="icon_box">
    <!-- <image class="img" src="/static/images/icons/order1.png" mode="widthFix"/> -->
    <van-icon name="star-o" size="65rpx" color="var(--text_dblue)"/>
    <text class="text">我的收藏</text>
  </view>
</view>

<!-- 邀请推广 -->

<view class="invite">
  <image class="background" src="https://mp-1b5583f9-2ba4-48b5-a198-3bfa87403c5b.cdn.bspapp.com/images/rainbow2.jpg" mode="center"/>
  <view class="overlay">

    <text>邀请朋友</text>
    <text> ></text>
  </view>
  <!-- <text class="overlay" >邀请朋友</text> -->
</view>

<!-- 设置信息 -->
<view class="setting_box">
  <view class="content">
    <view class="child">
      <!-- <image class="img" src="/static/images/icons/feedback2.png" mode="heightFix"/> -->
      <view class="icon">
      <van-icon name="chat-o" size="40rpx" color="var(--text_dblue)"/>
      </view>
      <text>意见反馈</text>
    </view>
    
    <view class="arrow">
      <van-icon name="arrow" color="var(--text_dblue)"/>
    </view>
  </view>

  <view class="separator"></view>
  
  <view class="content">
    <view class="child">
      <view class="icon">
      <van-icon name="friends-o" size="40rpx" color="var(--text_dblue)"/>
      </view>
      <text>关于我们</text>
    </view>
    
    <view class="arrow">
      <van-icon name="arrow" color="var(--text_dblue)"/>
    </view>
  </view>

  <view class="separator"></view>
  
  <view class="content">
    <view class="child">
      <view class="icon">
      <van-icon name="exchange" size="40rpx" color="var(--text_dblue)"/>
      </view>
      <text>退出登录</text>
    </view>
    
    <view class="arrow">
      <van-icon name="arrow" color="var(--text_dblue)"/>
    </view>
  </view>
</view>